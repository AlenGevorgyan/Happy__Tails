<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:background="?attr/selectableItemBackground"
                app:tint="@color/accent_color"/>

            <ImageButton
                android:visibility="gone"
                android:id="@+id/change_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit_image"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/post_picture"
    android:layout_width="180dp" android:layout_height="180dp" android:layout_gravity="center_horizontal" android:scaleType="centerCrop"
    android:src="@drawable/user_icon" app:civ_border_color="@color/accent_color" app:civ_border_width="2dp" /> <TextView
    android:id="@+id/dog_name_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" android:layout_marginTop="12dp" android:text="Dog Name"
    android:textColor="@color/text_primary" android:textSize="20sp" android:textStyle="bold" />

    <TextView
        android:id="@+id/urgency_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:layout_marginTop="4dp" android:text="Urgency Level: 0"
        android:textColor="@color/text_secondary" android:textSize="16sp"
        tools:text="Urgency Level: 3" /> <TextView
        android:id="@+id/supporters_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" android:text="Supported by: John, Sarah, Alex" android:textColor="@color/text_secondary" android:textSize="14sp"
        tools:text="Supported by: John, Sarah, Alex" /> <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Monthly Funding" android:textColor="@color/text_primary" android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/funding_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:progress="75"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_custom"
        android:progressTint="@color/accent_color" /> <com.google.android.material.button.MaterialButton
        android:id="@+id/view_profile_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" android:text="View profile" android:textColor="@color/white" app:backgroundTint="@color/accent_color" android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="12dp"
        app:cornerRadius="8dp"
        style="@style/Widget.MaterialComponents.Button" /> </LinearLayout>

</com.google.android.material.card.MaterialCardView>
