<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/primary_color">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:strokeWidth="0dp"
        app:cardElevation="6dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/secondary_color"
            android:layout_centerInParent="true">

            <!-- Veterinary Section Header -->
            <TextView
                android:id="@+id/veterinarySectionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veterinary Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <!-- Veterinary Clinic Name -->
            <EditText
                android:id="@+id/vetClinicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Veterinary Clinic Name"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_below="@id/veterinarySectionHeader"
                android:layout_marginTop="10dp" />

            <!-- Veterinary Doctor Name -->
            <EditText
                android:id="@+id/vetDoctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Veterinary Doctor Name"
                android:padding="10dp"
                android:textColor="#000"
                android:layout_below="@id/vetClinicName"
                android:layout_marginTop="10dp" />

            <!-- Visit Date -->
            <EditText
                android:id="@+id/vetVisitDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Visit Date (dd/MM/yyyy)"
                android:inputType="date"
                android:padding="10dp"
                android:textColor="#000"
                android:layout_below="@id/vetDoctorName"
                android:layout_marginTop="10dp" />

            <!-- Diagnosis Input -->
            <EditText
                android:id="@+id/vetDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Diagnosis"
                android:padding="10dp"
                android:textColor="#000"
                android:layout_below="@id/vetVisitDate"
                android:layout_marginTop="10dp" />

            <!-- Button to create post -->
            <Button
                android:id="@+id/postCreateBtn"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Create Post"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_color"
                android:layout_below="@id/vetDiagnosis"
                android:padding="10dp"
                android:layout_marginTop="30dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>